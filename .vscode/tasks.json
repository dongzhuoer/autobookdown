{
    // https://code.visualstudio.com/docs/editor/tasks
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [],
    "presentation": {
        "reveal": "silent",
    },
    "tasks": [
        {
            "label": "build index.html",
            "command": "pandoc index.md -s -o ~/gitdisk/bookdown.dongzhuoer.com/index.html",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "view GitHub",
            "command": "google-chrome https://github.com/dongzhuoer/${workspaceFolderBasename} 2> /dev/null",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
    ]
}